{
  "openapi": "3.0.1",
  "info": {
    "title": "TimeTrackingApi",
    "version": "1.0"
  },
  "paths": {
    "/Projects/list": {
      "get": {
        "tags": [
          "Projects"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/Users/employees": {
      "get": {
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/WorkingDays/get": {
      "get": {
        "tags": [
          "WorkingDays"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/WorkingDays/add": {
      "post": {
        "tags": [
          "WorkingDays"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/WorkingDays/delete": {
      "delete": {
        "tags": [
          "WorkingDays"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/WorkingDays/edit": {
      "patch": {
        "tags": [
          "WorkingDays"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/WorkingDayDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WorkingDayDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "taskDescription": {
            "type": "string",
            "nullable": true
          },
          "hours": {
            "type": "number",
            "format": "double"
          },
          "employeeId": {
            "type": "integer",
            "format": "int32"
          },
          "projectId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}